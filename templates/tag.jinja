{# Template for listing posts under a given tag.
    This is a full page, since tags are dynamically generated from what's in meta
#}

{% extends 'base.jinja' %}

{% block bodyclass %}tag tag-{{ friendly_tag }}{% endblock %}

{% block content %}

<h2>{{ tag }}</h2>

{% for post in site.tags[tag].posts|sort(attribute="date") %}
    <article class="post">
        <p class="post-date">{{ post.pub_date }}</p>
        <p class="post-link">
            <a href="{{ post.url }}">{{ post.title }}</a>
        </p>
    </article>
{% endfor %}


{% endblock %}
